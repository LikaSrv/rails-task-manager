<h1>New Task</h1>

<div style="margin: 20px">
  <%= form_with model: @task do |t| %>
    <div>
      <%= t.label :title%>
      <%= t.text_field :title%>
    </div>
    <div style="padding: 20px 0px">
      <%= t.label :details%>
      <%= t.text_field :details%>
    </div>
    <%= t.submit%>
  <%end%>
</div>

<%= link_to "Back to list", tasks_path%>
